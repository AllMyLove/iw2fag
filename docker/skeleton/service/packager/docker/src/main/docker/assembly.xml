<assembly>
    <dependencySets>
        <dependencySet>
            <includes>
                <include>com.iw2fag.lab:skeleton-packager-war</include>
            </includes>
            <outputDirectory>.</outputDirectory>
            <outputFileNameMapping>skeleton.war</outputFileNameMapping>
        </dependencySet>

        <dependencySet>
            <includes>
                <include>org.eclipse.jetty:jetty-distribution</include>
            </includes>
            <outputDirectory>.</outputDirectory>
            <outputFileNameMapping>jetty.tar.gz</outputFileNameMapping>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <fileSet>
            <directory>${docker.resource.home}</directory>
            <outputDirectory>${docker.resource.dir}/</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>**/*.bat</exclude>
                <exclude>**/*.sh</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${docker.resource.home}</directory>
            <outputDirectory>${docker.resource.dir}/</outputDirectory>
            <includes>
                <include>**/*.sh</include>
            </includes>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <fileSet>
            <directory>${jetty.home}</directory>
            <outputDirectory>jetty</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>${archive.directory}</directory>
            <outputDirectory>${archive.dir}</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>